# Navigation
alias ..="cd .."
alias cd..="cd .."

# Shortcuts
alias cls="clear"

# Get week number
alias week="date +%V"

# Project related
alias localstart=""

alias cat="bat"
alias grep="rg"
alias find="fd"

# Git commands
alias branch="git checkout -b"
alias branches="git branch --list"
alias co="git checkout "
alias checkout="git checkout "
alias stash="git stash --include-untracked"
alias stashes="git stash list"
alias status="git status"
alias commit="git add -A && git commit"
alias amend="git add -A && git commit --amend --no-edit"
alias force="git push --force"
alias pull="git pull"
alias push="git push"
alias reset_file="git checkout origin/master "
alias main="git checkout main && git pull --rebase origin main"
alias master="git checkout master && git pull --rebase origin master"
# Git worktree
alias gwl="git worktree list"
alias gwa="git worktree add"
alias gwr="git worktree remove"

# GitHub CLI
alias prc="gh pr create"
alias prv="gh pr view --web"
alias prl="gh pr list"
alias prco="gh pr checkout"
alias vi="nvim"
alias vim="nvim"
